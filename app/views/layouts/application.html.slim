    = render('layouts/navbar')
    - if notice
      p.alert.alert-success.position-absolute.text-center style="z-index:1000;" = notice
    - if alert
      p.alert.alert-danger.position-absolute style="z-index:100;"= alert
    = yield
    = render('layouts/footer')


javascript:
    new WOW().init();
    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(function () {
            var success = document.querySelector('.alert');
            console.log(success);
            success.innerHTML = "";
            success.classList.remove('alert');
        }, 3000);
    });